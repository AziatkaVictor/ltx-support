{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LTX",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keyword"
		},
		{
			"include": "#function"
		},
		{
			"include": "#number"
		},
		{
			"include": "#property"
		},
		{
			"include": "#sections"
		},
		{
			"include": "#classInheritance"
		},
		{
			"include": "#arguments"
		},
		{
			"include": "#string"
		},
		{
			"include": "#info"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.ltx",
					"begin": ";",
					"end": "\n",
					"beginCaptures": {
						"0": {
							"name": "punctuation.paren.open"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.paren.close"
						}
					}
				}
			]
		},
		"info": {
			"patterns": [
				{
					"name": "variable",
					"match": "(\\-|\\+)\\w+"
				}
			]
		},
		"function": {
			"patterns": [
				{
					"name": "support.function",
					"match": "(\\=|\\!)\\w+"
				}
			]
		},
		"number": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "(?<!\\w)(\\-)?\\d+(\\.\\d+)?(?!\\w)"
				}
			]
		},
		"property": {
			"patterns": [
				{
					"name": "variable.other.constant.property",
					"match": "^(\\s*?)?[\\w\\$]+?(?=(\\s*?)?(\\=|\\n))"
				}
			]
		},
		"sections": {
			"patterns": [
				{
					"name": "support.class",
					"match": "(\\[[\\w@]+\\]|\\w+@+\\w+)"
				}
			]
		},
		"string": {
			"patterns": [
				{
					"name": "variable.other.constant.property",
					"match": "[\\w\\#\"\\*\\.\\@\\$\\\\]+"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(nil|true|false|complete|fail|reversed)\\b"
				}
			]
		},
		"arguments": {
			"patterns": [
				{
					"name": "variable",
					"match": "(?<=(\\(|:))\\w+(?=(:|\\)))"
				}
			]
		},
		"classInheritance": {
			"patterns": [
				{
					"name": "support.class",
					"match": "(?<=\\]\\:)\\w+"
				}
			]
		}
	},
	"scopeName": "source.ltx"
}