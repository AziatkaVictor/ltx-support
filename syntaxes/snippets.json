{
    "Logic":{
		"prefix": "logic",
		"body": [
			"[logic${1}]",
			"active = ${2}"
		]
    },
	"New Task" : {
		"prefix": "NewTask",
		"body" : [
			"[${1:$TM_SELECTED_TEXT}]",
			"icon = IconName",
			"prior = 1",
			"storyline = ${2|true,false|}",
			"target = TargetStoryID",
			"title = ${1:$TM_SELECTED_TEXT}_1_name",
			"descr = ${1:$TM_SELECTED_TEXT}_1_text",
			"condlist_0 = {+${1:$TM_SELECTED_TEXT}_end} complete"
		]
	},
	"Closed/Opened Door" : {
		"prefix" : "Door",
		"body" : [
			"[ph_door@closed]",
			"closed = true",
			"locked = false",
			"on_use = ph_door@open",
			"snd_open_start = metal_small_open_start",
			"snd_close_start = metal_small_close_start",
			"snd_close_stop = metal_small_close_stop",
			"",
			"[ph_door@open]",
			"closed = false",
			"locked = false",
			"on_use = ph_door@closed",
			"snd_open_start = metal_small_open_start",
			"snd_close_start = metal_small_close_start",
			"snd_close_stop = metal_small_close_stop"
		]
	},
	"Locked/Closed/Opened Door" : {
		"prefix" : "LockedDoor",
		"body" : [
			"[ph_door@locked]",
			"closed = true",
			"locked = true",
			"on_use = {+info} ph_door@closed",
			"snd_open_start = metal_small_open_start",
			"snd_close_start = metal_small_close_start",
			"snd_close_stop = metal_small_close_stop",
			"",
			"[ph_door@closed]",
			"closed = true",
			"locked = false",
			"on_use = ph_door@open",
			"snd_open_start = metal_small_open_start",
			"snd_close_start = metal_small_close_start",
			"snd_close_stop = metal_small_close_stop",
			"",
			"[ph_door@open]",
			"closed = false",
			"locked = false",
			"on_use = ph_door@closed",
			"snd_open_start = metal_small_open_start",
			"snd_close_start = metal_small_close_start",
			"snd_close_stop = metal_small_close_stop",
			""
		]
	},
	"Door Section" : {
		"prefix" : "DoorSection",
		"body" : [
			"[ph_door@${1}]",
			"closed = ${2|true,false|}",
			"locked = ${3|true,false|}",
			"on_use = ph_door@${4}",
			"snd_open_start = metal_small_open_start",
			"snd_close_start = metal_small_close_start",
			"snd_close_stop = metal_small_close_stop"
		]
	},
	"New SIM NPC Squad" : {
		"prefix" : "SimSquad",
		"body" : [
			"[${1}_squad]:online_offline_group",
			"faction                 = ${2|stalker,bandit,killer,dolg,freedom,monolith,zombied|}",
			"target_smart            = ${3:smart_name}",
			"store_id                = ${1}_squad",
			"npc                     = sim_default_${2|stalker,bandit,killer,dolg,freedom,monolith,zombied|}_${4:0}, sim_default_${2|stalker,bandit,killer,dolg,freedom,monolith,zombied|}_${4:0}"
		]
	},
	"New Quest Item" : {
		"prefix" : "QuestItem",
		"body" : [
			"[${1:name}]:device_pda",
			"\\$spawn = \"quest_items/${1:name}\"",
			"description = ${1:name}_descr",
			"inv_name = ${1:name}_info",
			"visual = ${2:model.ogf}",
			"inv_weight = 0",
			"story_id = ${1:name}",
			"can_trade = false",
			"quest_item = true",
			"inv_grid_width = ${3:1}",
			"inv_grid_height = ${4:1}",
			"inv_grid_x = ${5:1}",
			"inv_grid_y = ${6:1}"
		]
	},
	"Cutscene" : {
		"prefix" : "Cutscene",
		"body" : [
			"[sr_cutscene${1:@name}]",
			"point = ${2:waypoint}_walk",
			"look = ${2:waypoint}_look",
			"cam_effector = ${3:cam_effector_name}",
			"global_cameffect = true",
			"on_signal = cameff_end | ${4:nil}"
		]
	}
}