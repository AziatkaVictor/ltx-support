{
	"name": "ltx-support",
	"displayName": "LTX Support",
	"publisher": "AziatkaVictor",
	"icon": "data/Icon.png",
	"description": "Support of stalker logic format",
	"version": "0.1.3",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:ltx"
	],
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"patch": "npm version patch --no-git-tag-version",
		"pack": "vsce package",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"@types/vscode": "^1.63.0",
		"iconv": "^3.0.1",
		"tslint": "^5.11.0",
		"typescript": "^3.1.3"
	},
	"contributes": {
		"languages": [
			{
				"id": "ltx",
				"aliases": [
					"LTX",
					"ltx"
				],
				"extensions": [
					".ltx"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ltx",
				"scopeName": "source.ltx",
				"path": "./syntaxes/ltx.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "ltx",
				"path": "./syntaxes/snippets.json"
			}
		],
		"configuration": {
			"title": "LTX",
			"properties": {
				"LTX.Directories.PathToScripts": {
					"type": "string",
					"default": null,
					"description": "Путь к папке, где хранится функции. Например: (D:\\Stalker CoP\\gamedata\\scripts)"
				},
				"LTX.Directories.PathToLocalization": {
					"type": "string",
					"default": null,
					"description": "Путь к папке, где хранится локализация. Например: (D:\\Stalker CoP\\gamedata\\configs\\text\\rus). На данный момент не работает. (WiP)"
				},
				"LTX.Completion.IgnoreLocalizationFile": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Название файлов локализации, которые будут игнорироваться. Например: ('st_characters.xml'). На данный момент не работает. (WiP)"
				},
				"LTX.Diagnostics.EnableDiagnostic": {
					"type": "boolean",
					"default": false,
					"description": "Включить диагностику файлов. Будет происходить проверка файла на ошибки. На данный момент не работает. (WiP)"
				},
				"LTX.Diagnostics.IgnoreParamsDiagnostic": {
					"type": "boolean",
					"default": false,
					"description": "Игнорировать проверку параметров секции. На данный момент не работает. (WiP)"
				}
			}
		},
		"configurationDefaults": {
			"[ltx]": {
				"editor.semanticHighlighting.enabled": true
			}
		}
	},
	"dependencies": {
		"file-exists": "^5.0.1",
		"xml2js": "^0.4.23"
	},
	"__metadata": {
		"id": "dbc56428-5b52-4f1d-97db-5a5aeeae967e",
		"publisherDisplayName": "AziatkaVictor",
		"publisherId": "02926376-420f-44fa-8a07-e16286570a32",
		"isPreReleaseVersion": false
	},
	"bugs": {
		"url": "https://ap-pro.ru/forums/topic/3561-vscode-podderzhka-sintaksisa-cop"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AziatkaVictor/ltx-support.git"
	}
}
