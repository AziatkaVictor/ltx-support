{
    "name": "ltx-support",
    "displayName": "LTX Support",
    "publisher": "AziatkaVictor",
    "description": "Support of stalker logic format",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ltx"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.0.0",
        "@types/vscode": "^1.63.0",
        "tslint": "^5.11.0",
        "typescript": "^3.1.3",
        "iconv": "^3.0.1",
        "xml2js": "^0.4.23"
    },
    "contributes": {
        "languages": [
            {
                "id": "ltx",
                "aliases": [
                    "LTX",
                    "ltx"
                ],
                "extensions": [
                    ".ltx"
                ],
                "configuration": "./syntaxes/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ltx",
                "scopeName": "source.ltx",
                "path": "./syntaxes/ltx.tmLanguage.json",
                "tokenTypes": {
                    "entity.name.function": "string"
                }
            }
        ],
        "snippets": [
            {
                "language": "ltx",
                "path": "./syntaxes/snippets.json"
            }
        ],
        "configuration": {
            "title": "LTX",
            "properties": {
                "PathToFunctionsLogic": {
                    "type": "string",
                    "default": null,
                    "description": "Your path to file with logic functions. Like: (D:\\Stalker CoP\\gamedata\\scripts\\xr_effects.script)"
                },
                "PathToLocalization": {
                    "type": "string",
                    "default": null,
                    "description": "Your path to file with logic functions. Like: (D:\\Stalker CoP\\gamedata\\configs\\text\\rus)"
                }
            }
        },
        "semanticTokenScopes": [
            {
                "language": "ltx",
                "scopes": {
                    "entity.name.function": [
                        "group.functions.logic.ltx"
                    ],
                    "entity.name.variable": [
                        "group.functions.logic.args.ltx"
                    ]
                }
            }
        ],
        "commands": [],
        "configurationDefaults": {
            "[ltx]": {
                "editor.semanticHighlighting.enabled": true
            },
            "editor.semanticTokenColorCustomizations": {
                "enabled": true,
                "rules": {
                    "entity.name.function": "#ff0000"
                }
            }
        }
    }
}
